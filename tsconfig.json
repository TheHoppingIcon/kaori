{
	"compilerOptions": {
		"strict": true,
		"module": "commonjs",
		"moduleResolution": "node",
		"target": "es2017",
		"lib": ["ESNext"],
		"declaration": true,
		"sourceMap": false,
		"removeComments": false,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"alwaysStrict": true,
		"allowSyntheticDefaultImports": true,
		"pretty": true,
		"outDir": "dist",
		"declarationDir": "typings"
	},
	"include": ["./src"]
}
